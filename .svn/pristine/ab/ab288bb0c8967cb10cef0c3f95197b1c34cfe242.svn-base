* {
	margin: 0 auto;
	padding: 0;
	list-style: none;
	text-decoration: none;
	color: black;
	font-family: 'Jua', sans-serif;
}

#wrap {
	width: 1600px;
	height: 100%;
}

/* header */
header {
	width: 1600px;
	height: 180px;
	background-color: white;
}

.info {
  position: relative;
  left: 1200px;
  display: flex;
  width: 200px;
  top: 20px;
}

.info > li {
  color: gray;
  padding: 10px;
}

.logo {
	width: 200px;
	float: left;
	position: relative;
   left: 170px;
   top: 15px;
}

#wrap .nav {
	width: 1200px;
	display: flex;
}

#wrap .nav li a {
	z-index: 100px;
	position: relative;
	left: 300px;
	font-size: 20px;
	list-style: none;
	text-decoration: none;
	padding: 30px;
	line-height: 200px;
}
/* header e */

/* content */

.content {
  clear: both;
  width: 100%;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

section.noticewrite {
  padding: 80px 0;
}

.page-title {
  margin-bottom: 60px;
}
.page-title h3 {
  font-size: 28px;
  color: #333333;
  font-weight: 400;
  text-align: center;
}

#editor_form {
  width: 800px;
  transform: translate(50%);
}

#div_table {
  text-align: center;
  font-size: 15px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

#div_table th, #div_table td {
  padding: 14px 0;
}

#div_table tbody td {
  border-bottom: 1px solid #e7e7e7;
  text-align: center;
}

#div_table tbody th {
  padding-left: 28px;
  padding-right: 14px;
  border-top: 1px solid #e7e7e7;
  text-align: left;
}

#div_table tbody th p{
  display: none;
}

#div_table .td_left{
  text-align: center;
}
.td_right > input{
  width: 100%;
  height: 25px;
  border: none;
  border-bottom: 1px solid #999;
}

.td_right > textarea{
  width: 100%;
  height: 300px;
  border-radius: 5px;
  border: none;
  background: rgba(0, 0, 0, 0.1);
  font-size: 15px;
}

#div_button{
  height: 100px;
  margin-top: 150px;
  margin-right: 20px;
}

#div_button input{
  padding: 5px; 
  border: none;
  border-radius: 5px;
  margin-left: 10px;
  position: relative;
  bottom: 100px;
}

#div_button{
  text-align: right;
}

#file_title, #file_area > input {
	border-bottom: none;
}

.form-inline {
	float: left;
}
/* 버튼 액션추가 */
#div_button > input:active{
  transform:translate(2px,2px);
}

/* reset */

* {
  list-style: none;
  text-decoration: none;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
.clearfix:after {
  content: '';
  display: block;
  clear: both;
}
.container {
  width: 1100px;
  margin: 0 auto;
}
.blind {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  margin: -1px;
  width: 1px;
  height: 1px;
}


/* footer */
.footer {
	clear: both;
	height: 150px;
	background-color: #FEF5ED;
}

.footercontent {
	left: 300px;
}

.logo_title {
	position: relative;
	font-size: 25px;
	text-align: center;
	font-weight: bold;
}

.footeraddr {
	position: relative;
	font-size: 15px;
	top: 50px;
	text-align: center;
}

.footeraddr>p {
	margin-top: 15px;
}

.sns_section {
	position: relative;
	text-align: center;
	top: 30px;
}

.sns_section>a {
	margin-left: 10px;
}

.reply_area {
  width: 800px;
  transform: translate(50%);
  margin: -100px -50px 50px 0;
}
/* footer e */


.edit_button{
	display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: normal;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
	padding: 5px 10px;
    font-size: 12px;
    line-height: 1.5;
    border-radius: 3px;
    background-color: #48cce1 ;
    border-color:  #48cce1 ; 
    color : #fff;
    
}

.re_date{
	margin-bottom : 0;
}

.re_reply_button{
	background : transparent;
	border : none;
	
	
}