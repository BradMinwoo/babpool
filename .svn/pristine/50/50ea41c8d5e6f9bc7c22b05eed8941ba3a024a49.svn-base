* {
	margin: 0 auto;
	padding: 0;
	list-style: none;
	text-decoration: none;
	color: black;
	font-family: 'Jua', sans-serif;
}

#wrap {
	width: 1600px;
	height: 100%;
}

/* content */

.content {
  clear: both;
  width: 100%;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

.market_title {
  margin-bottom: 60px;
}
.market_title h1 {
  font-size: 28px;
  color: #333333;
  font-weight: 400;
  text-align: center;
}

#editor_form {
  width: 800px;
  transform: translate(50%);
}

#div_table {
  text-align: center;
  font-size: 15px;
}

#div_table th, #div_table td {
  padding: 14px 0;
}

#div_table tbody td {
  border-bottom: 1px solid #e7e7e7;
  text-align: center;
}

#div_table tbody th {
  padding-left: 28px;
  padding-right: 14px;
  border-top: 1px solid #e7e7e7;
  text-align: left;
}

#div_table tbody th p{
  display: none;
}

#div_table .td_left{
  text-align: center;
}
.td_right > input{
  width: 100%;
  height: 25px;
  border: none;
  border-bottom: 1px solid #999;
}

.td_right > textarea{
  width: 100%;
  height: 300px;
  border-radius: 5px;
  border: none;
  background: rgba(0, 0, 0, 0.1);
  font-size: 15px;
}

#div_button{
  height: 100px;
  margin-top: 150px;
  margin-right: 20px;
}

#div_button input{
  padding: 5px; 
  border: none;
  border-radius: 5px;
  margin-left: 10px;
  position: relative;
  bottom: 100px;
}

#div_button{
  text-align: right;
}

#file_title, #file_area > input {
	border-bottom: none;
}

.form-inline {
	float: left;
}
/* 버튼 액션추가 */
#div_button > input:active{
  transform:translate(2px,2px);
}

/* reset */

.clearfix:after {
  content: '';
  display: block;
  clear: both;
}
.container {
  width: 1100px;
  margin: 0 auto;
}
.blind {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  margin: -1px;
  width: 1px;
  height: 1px;
}
