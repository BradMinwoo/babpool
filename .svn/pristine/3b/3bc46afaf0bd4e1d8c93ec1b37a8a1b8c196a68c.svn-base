/* header */
.header {
	width: 1200px;
	height: 150px;
}

.info {
	position: relative;
	left: 500px;
	display: flex;
	width: 200px;
	top: 20px;
}

.info>li {
	color: gray;
}

.menu-bar {
	width: 1000px;
}

.logo {
	width: 200px;
	float: left;
	position: relative;
	left: 20px;
	top: 15px;
}

.menu-bar li a {
	float: left;
	position: relative;
	left: 100px;
	font-size: 18px;
	top: 90px;
	line-height: 30px;
	text-align: center;
}

.menu-bar .link {
	width: 150px;
	display: block;
}

